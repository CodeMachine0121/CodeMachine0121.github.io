---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

import Layout from '../../layouts/Layout.astro';
import PostNavigation from '../../components/sections/blog/PostNavigation.astro';
import ReadingProgress from '../../components/common/ReadingProgress.astro';
import { getAdjacentSeriesPosts } from '../../utils/series';

export const getStaticPaths = async () => {
    const blogs = await getCollection("blogs");
    // 只處理在子文件夾中的文章
    const nestedBlogs = blogs.filter(blog => blog.slug.includes('/'));
    const paths = nestedBlogs.map(blog => {
        return {
            params: {
                slug: blog.slug
            },
            props: {
                blog
            }
        }
    });

    return paths;
}

type Props = {
    blog: CollectionEntry<"blogs">
}

const {blog} = Astro.props;
const {Content} = await blog.render();
const { prevPost, nextPost } = await getAdjacentSeriesPosts(blog.slug, blog.data.parent!);
---

<Layout title={blog.data.title}>
    <ReadingProgress />
    <article class="w-full max-w-none md:max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <header class="mb-12 text-center md:text-left pb-8 border-b border-[var(--color-border)]">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-4 leading-tight text-text">{blog.data.title}</h1>
            {blog.data.description && (
                <p class="text-base md:text-lg text-offset mb-4 leading-relaxed">{blog.data.description}</p>
            )}
            <time datetime={blog.data.datetime} class="text-sm text-offset block">
                {new Date(blog.data.datetime).toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
        </header>

        <div class="blog-content prose prose-lg dark:prose-invert">
            <Content />
        </div>

        <PostNavigation {prevPost} {nextPost} />

        <div class="back-to-top fixed bottom-8 right-8 opacity-0 invisible transition-all z-30">
            <button
                id="back-to-top-button"
                class="bg-primary text-white rounded-full p-3 shadow-lg hover:bg-primary-600 transition-colors"
                aria-label="回到頂部"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
            </button>
        </div>
    </article>

    <script>
        import { toggleMarkdownTheme } from "../../scripts/theme";
        import "../../scripts/mobileFixes";

        const theme = document.documentElement.dataset.theme;
        toggleMarkdownTheme(theme);

        // 處理回到頂部按鈕
        document.addEventListener('DOMContentLoaded', () => {
            const backToTopButton = document.getElementById('back-to-top-button');
            const backToTopContainer = document.querySelector('.back-to-top');

            if (backToTopButton && backToTopContainer) {
                // 顯示或隱藏按鈕
                const toggleBackToTopButton = () => {
                    if (window.scrollY > 300) {
                        backToTopContainer.classList.add('visible');
                    } else {
                        backToTopContainer.classList.remove('visible');
                    }
                };

                // 初始檢查
                toggleBackToTopButton();

                // 滾動事件
                window.addEventListener('scroll', toggleBackToTopButton);

                // 點擊事件
                backToTopButton.addEventListener('click', () => {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }
        });
    </script>
</Layout>

