---
import { Image } from 'astro:assets';
import me from '../../assets/me.png';
import { basic } from '../../config/cv.json';

const skills = [
    { en: "Backend Systems",},
    { en: "Microservices",},
    { en: "DevOps",},
    { en: "Kubernetes",},
    { en: "TDD/ATDD",},
    { en: "Problem Solving",  }
];
---

<section class="relative py-12 px-4 sm:py-16 lg:py-24 overflow-hidden">
    <!-- Subtle background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-background via-background to-background-offset opacity-50 pointer-events-none"></div>

    <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-16">
            <!-- Image Section with enhanced styling -->
            <div class="relative flex justify-center lg:order-2" data-reveal="fade-in" data-reveal-delay="200">
                <div class="relative group">
                    <!-- Decorative background circle -->
                    <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-secondary/20 rounded-full blur-3xl opacity-50 group-hover:opacity-70 transition-opacity duration-500"></div>

                    <!-- Image container with border -->
                    <div class="relative w-full md:max-w-md lg:max-w-md">
                        <div class="relative rounded-2xl overflow-hidden border-4 border-background-offset shadow-2xl transition-transform duration-300 group-hover:scale-[1.02]">
                            <Image
                                class="w-full h-auto"
                                src={me}
                                loading="eager"
                                alt="James Coding Afternoon"
                            />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Content Section -->
            <div class="lg:order-1 space-y-6">
                <!-- Job title badge -->
                <div class="inline-flex items-center px-4 py-2 bg-background-offset border border-border rounded-full" data-reveal="fade-up">
                    <div class="w-2 h-2 bg-primary rounded-full mr-2 animate-pulse"></div>
                    <p class="text-sm sm:text-base font-medium text-offset">
                        {basic?.job}
                    </p>
                </div>

                <!-- Name with gradient -->
                <h1 class="text-4xl font-bold sm:text-5xl lg:text-6xl leading-tight bg-gradient-to-r from-default to-offset bg-clip-text text-transparent" data-reveal="fade-up" data-reveal-delay="100">
                    {basic?.name}
                </h1>

                <!-- Summary -->
                <div class="text-lg sm:text-xl text-offset leading-relaxed" data-reveal="fade-up" data-reveal-delay="150">
                    <p>{basic?.summary?.en}</p>
                </div>

                <!-- Skills tags -->
                <div class="flex flex-wrap gap-2 pt-2" data-reveal="fade-up" data-reveal-delay="200">
                    {skills.map((skill) => (
                        <span class="px-3 py-1.5 text-sm font-medium bg-background-offset text-default border border-border rounded-lg hover:border-primary hover:bg-primary/5 transition-all duration-200 cursor-default">
                            {skill.en}
                        </span>
                    ))}
                </div>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-4" data-reveal="fade-up" data-reveal-delay="250">
                    <a
                        href=`/cv/${basic?.cv_file_name}`
                        title="Download CV"
                        download
                        class="interactive-scale group inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-white bg-primary hover:bg-secondary focus:bg-secondary rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                        role="button"
                    >
                        <svg class="w-5 h-5 mr-2 transition-transform group-hover:translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Download CV
                    </a>

                    <a
                        href="#contact"
                        class="interactive-scale inline-flex items-center justify-center px-8 py-4 text-base font-semibold text-default bg-background-offset hover:bg-border border border-border rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                        role="button"
                    >
                        Contact Me
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </a>
                </div>

                <!-- Social proof / Quick stats -->
                <div class="grid grid-cols-3 gap-4 pt-6 border-t border-border" data-reveal="fade-up" data-reveal-delay="300">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-primary">3+</div>
                        <div class="text-sm text-offset">Years Exp.</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-primary">50+</div>
                        <div class="text-sm text-offset">Projects</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-primary">CKAD</div>
                        <div class="text-sm text-offset">Certified</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Smooth animations with reduced motion support */
    @media (prefers-reduced-motion: reduce) {
        * {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }
</style>
